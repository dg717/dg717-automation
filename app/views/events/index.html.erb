<h2>EVENT BOARD MANAGER</h2>

<ul class="nav nav-tabs">
<li role="presentation" class='<%= "active" if @filter == 'current' %>' ><%= link_to 'Current', events_path %></li>
<li role="presentation" class='<%= "active" if @filter == 'past' %>'><%= link_to 'Past', events_path(filter:'past') %></li>
</ul>
<table width='100%' class='table table-striped'>
  <thead>
    <tr height='50'>
      <th>Name</th>
      <th>Date/Time/Space</th>
      <th>Description</th>
      <th>Subtext</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @events.blank? %>
      <tr>
        <td colspan="10">
          <h4>There are no events registered.</h4>
        </td>
      </tr>
    <% else %>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.header %><br /><%= event.space_time %></td>
        <td><%= event.description %></td>
        <td><%= event.subtext %></td>
        <td><%= cl_image_tag(event.image, :width=> 100, :height => 50, :crop => :fill) %></td>
        <td><%= link_to event do %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <% end %>
        </td>
        <td><%= link_to edit_event_path(event) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
        </td>
        <td><%= link_to event, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_event_path, class: "btn btn-primary" do %>
  <span class='glyphicon glyphicon-plus'></span> ADD NEW 
<% end %> &nbsp;
<%= link_to events_preview_path, class: "btn btn-primary" do %>
  <span class='glyphicon glyphicon-film'></span> PREVIEW 
<% end %>