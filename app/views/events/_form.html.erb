<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :type %><br>
    <select name='type'>
    <%= options_for_select([["Event",1],["Popup",2],["Happy Hour",3],["Party",4]])%>
    </select>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :from %><br>
    <%= f.date_select :from %> <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :to %><br>
    <%= f.date_select :to %> <%= f.time_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :subtext %><br>
    <%= f.text_area :subtext %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= cl_image_upload_tag(:image) %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
